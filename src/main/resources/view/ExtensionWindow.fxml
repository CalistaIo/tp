<fx:root resizable="true" title="URL Links" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/11.0.1"
         xmlns:fx="http://javafx.com/fxml/1">
   <scene>
      <Scene>
          <AnchorPane prefHeight="407.0" prefWidth="410.0">
            <children>
               <SplitPane dividerPositions="0.7777777777777778" orientation="VERTICAL" prefHeight="407.0" prefWidth="410.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                 <items>
                   <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                           <ListView fx:id="linkList" prefHeight="307.3333333333333" prefWidth="408.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                              <contextMenu>
                                 <ContextMenu fx:id="userOptions" onAction="#chooseMenuOptions">
                                   <items>
                                     <MenuItem fx:id="copyItem" mnemonicParsing="false" text="Copy" />
                                     <MenuItem fx:id="deleteItem" mnemonicParsing="false" text="Delete" />
                                   </items>
                                 </ContextMenu>
                              </contextMenu>
                              <effect>
                                 <Blend />
                              </effect></ListView>
                        </children>
                     </AnchorPane>
                   <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
                        <children>
                           <TextField fx:id="userInput" layoutX="14.0" layoutY="10.0" prefHeight="25.0" prefWidth="303.0" promptText="URL">
                              <font>
                                 <Font name="Arial Bold" size="12.0" />
                              </font></TextField>
                           <Button fx:id="userButton" layoutX="328.0" layoutY="11.0" mnemonicParsing="false" onAction="#handleUserInput" text="Click Me" textAlignment="CENTER">
                              <font>
                                 <Font name="Arial Bold" size="12.0" />
                              </font></Button>
                        </children>
                        <effect>
                           <Glow />
                        </effect></AnchorPane>
                 </items>
               </SplitPane>
            </children>
         </AnchorPane>
      </Scene>
   </scene>
</fx:root>
